<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bagein" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_200</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/neutral_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_200</item>
        <item name="colorSecondaryVariant">@color/primary_200</item>
        <item name="colorOnSecondary">@color/neutral_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnPrimarySurface</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/gsanstext_medium</item>
        <item name="elevation">0dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>