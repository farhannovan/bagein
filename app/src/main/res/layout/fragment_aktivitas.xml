<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral_200"
    android:id="@+id/aktivitas"
    tools:context=".aktivitas.AktivitasFragment">
    <RelativeLayout
        android:id="@+id/titleBarAktivitas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/neutral_25"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/gsanstext_medium"
            android:padding="20dp"
            android:text="Aktivitas"
            android:textColor="@color/neutral_900"
            android:textSize="24sp" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/aktivitasMisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleBarAktivitas">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gsanstext_medium"
                android:text="Bangun kebiasaan baikmu"
                android:textColor="@color/neutral_900"
                android:textSize="16sp" />
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:padding="5dp"
                android:text="Misi"
                android:textAllCaps="false"
                android:textColor="@color/primary_500"
                android:textSize="14sp" />
        </RelativeLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_success_background"
                android:checked="true"
                android:text="01" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_success_background"
                android:checked="true"
                android:text="02" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="03"
                android:textColor="@color/neutral_900" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="04"
                android:textColor="@color/neutral_900" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="05"
                android:textColor="@color/neutral_900" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="06"
                android:textColor="@color/neutral_900" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="07"
                android:textColor="@color/neutral_900" />
            <RadioButton
                style="@style/rbStyleMisi"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/misi_default_background"
                android:checked="true"
                android:text="07"
                android:textColor="@color/neutral_900" />
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/aktivitasRiwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@+id/aktivitasMisi"
        tools:layout_editor_absoluteX="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tRiwayat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:fontFamily="@font/gsanstext_medium"
                android:text="Riwayat Kebaikanmu"
                android:textColor="@color/neutral_900"
                android:textSize="16sp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/riwayatSatu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/displaybox_background"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/donasi2"
                    android:scaleType="fitCenter" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="Yuk Berbagi"
                        android:textColor="@color/neutral_900"
                        android:textSize="16sp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/gsanstext_regular"
                    android:gravity="start"
                    android:text="Peduli Kami"
                    android:textColor="@color/neutral_600"
                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Rp12.876.881"
                        android:textColor="@color/neutral_700"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gsanstext_regular"
                        android:gravity="start"
                        android:text="5 hari lagi"
                        android:textColor="@color/neutral_600"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/riwayatDua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/displaybox_background"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/donasi2"
                    android:padding="0dp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:gravity="start"
                        android:text="Yuk Berbagi"
                        android:textColor="@color/neutral_900"
                        android:textSize="16sp" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/gsanstext_regular"
                    android:gravity="start"
                    android:text="Peduli Kami"
                    android:textColor="@color/neutral_600"
                    android:textSize="12sp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Rp12.876.881"
                        android:textColor="@color/neutral_700"
                        android:textSize="12sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/gsanstext_regular"
                        android:gravity="start"
                        android:text="5 hari lagi"
                        android:textColor="@color/neutral_600"
                        android:textSize="12sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>